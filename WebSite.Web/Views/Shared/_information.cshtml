<section class="featured section-padding">
    <div class="container">
        <div class="row">

            <div class="col-lg-6 col-12">
                <div class="profile-thumb">
                    <div class="profile-title">
                        <h4 class="mb-0">Information</h4>
                    </div>

                    <div class="profile-body">
                        <p>
                            <span class="profile-small-title">Name</span>
                            <span>@Model.myInfo.name @Model.myInfo.surname</span>
                        </p>

                        <p>
                            <span class="profile-small-title">Birthday</span>
                            <span>@Model.myInfo.birthDay.ToShortDateString()</span>
                        </p>

                        <p>
                            <span class="profile-small-title">Phone</span>
                            <span><a href="tel: @Model.myInfo.telephone">@Model.myInfo.telephone</a></span>
                        </p>

                        <p>
                            <span class="profile-small-title">Email</span>
                            <span><a href="mailto:@Model.myInfo.email">@Model.myInfo.email</a></span>
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 col-12 mt-5 mt-lg-0">
                <div class="about-thumb">
                    <div class="row">
                        <div class="col-lg-6 col-6 featured-border-bottom py-2">
                            <a href="/Home/DownloadPdf" target="_blank">My CV for PDF</a>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>